require 'rubygems'
require 'bundler/setup'
require 'gumdrop'
# Bundler.require if File.exists?('Gemfile')

begin
  if Gumdrop.in_site_folder?
    Gumdrop::CLI::Internal.start
  else
    Gumdrop::CLI::External.start
  end
  # Catapult::CLI.start
rescue Interrupt => e
  puts "\nQuitting..."
  exit 1
rescue SystemExit => e
  exit e.status
end