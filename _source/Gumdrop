
Gumdrop.configure do|config|

  config.set project:{
    name: 'gumdrop',
    title: 'Gumdrop',
    tagline: 'The sweet cms/prototyping tool.'
  }

  config.set author:{
    user: 'darthapo',
    name: 'Matt McCray',
    email: 'matt@elucidata.net'
  }

  config.output_dir= "../"
  config.source_dir= "./"
  config.data_dir= './data'

end

Gumdrop.ignore "data/**/*"

Gumdrop.view_helpers do

  def project
    config.project
  end

  def author
    config.author
  end

  def github_url
    "#{ github_user_url }/#{ project.name }"
  end

  def github_site_url
    "http://#{ author.user }.github.com/#{ project.name }"
  end

  def github_user_url
    "https://github.com/#{ author.user }"
  end

  def class_name
    uri.gsug(File.extname(filename), '').gsub('/','-')
  end

  def readme
    Gumdrop.read_me
  end

  def changelog
    Gumdrop.change_log
  end

end

